{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "outputDirectory": "build" }
    },
    {
      "src": "server/api/generate.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/generate", "dest": "server/api/generate.js" },
    { "src": "/(.*)", "dest": "client/build/$1" }
  ]
}
